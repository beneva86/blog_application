extends layout

block content
		.container
			#myCarousel.carousel.slide(data-ride='carousel')
				//- Indicators
				ol.carousel-indicators
					li.active(data-target='#myCarousel', data-slide-to='0')
					li(data-target='#myCarousel', data-slide-to='1')
					li(data-target='#myCarousel', data-slide-to='2')
				//- Wrapper for slides
				.carousel-inner
					.item.active
						img(src='/images/hungary1.jpg', alt='Los Angeles', style='width:100%;')
						.carousel-caption
							h4 Chain Bridge
					.item
						img(src='/images/hungary2.jpg', alt='Chicago', style='width:100%;')
						.carousel-caption
							h4 Esztergom Basilica
					.item
						img(src='/images/hungary3.jpg', alt='New York', style='width:100%;')
						.carousel-caption
							h4 Parlament
				//- Left and right controls
				a.left.carousel-control(href='#myCarousel', data-slide='prev')
					span.glyphicon.glyphicon-chevron-left
					span.sr-only Previous
				a.right.carousel-control(href='#myCarousel', data-slide='next')
					span.glyphicon.glyphicon-chevron-right
					span.sr-only Next
		br
		.container
			.row
				h2 What do you think about Hungary?
				a(href='/hungary_forum')
					button Go to the Forum
		br
		.container
			.row
				h2 Questions about Hungary
				a(href='/hungary_questions')
					button Go to the Questions
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
		script(src='/js/bootstrap.min.js')